@model VeganRecipes.Entity.Models.Food

@{
    ViewData["title"] = "Index";
}



<div class="main-div">
    <div class="text-center text-capitalize h2 p-2">Recipe No:@Model.Id - <em>@Model.Title</em></div>
    <div class="text-center h4 p-2">Difficulty Level: @Model.Difficulty</div>

    <div class="row p-3">
        <div class="col-7 text-start">
            <div>
                <p><span class="h6">Quantity:</span> @Html.DisplayFor(Model => Model.Portion)</p>
            </div>
            <div>
                <p><span class="h6">Cooking Time: </span> @Model.Time</p>
            </div>
            <div>
                <span class="h6">
                    Description:
                </span> @Html.DisplayFor(Model => Model.Description)
            </div>
            <div class="h5 pt-4"><em>Let's Have fun while cooking :)</em></div>
            <div class="accordion py-3" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-dark-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="true" aria-controls="flush-collapseOne">
                            <span class="h6">Ingredients</span>
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse show">
                        <div class="accordion-body text-light" style="background-color:darkcyan">
                            <ul>
                                @foreach (var item in Model.Ingredients)
                                {
                                    <li class="pb-3">@item</li>
                                }
                            </ul>

                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed bg-dark-subtle" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="true" aria-controls="flush-collapseTwo">
                            <span class="h6">Cooking Instructions</span>
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse show">
                        <div class="accordion-body text-light" style="background-color:darkcyan">
                            <dl class="row">
                                <dt class="col-2">
                                    Step 1:
                                </dt>
                                <dd class="col-10">
                                    <p>@Model.Method[0].Step1</p>
                                </dd>
                                <dt class="col-2">
                                    Step 2:
                                </dt>
                                <dd class="col-10">
                                    <p> @Model.Method[1].Step2</p>
                                </dd>
                            </dl>

                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-5 text-center">
            <img class="img-fluid img-thumbnail rounded-4" style="background-color:chartreuse" src="@Model.Image" alt="@Model.Title" />
        </div>
    </div>
</div>
