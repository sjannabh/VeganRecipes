@model IEnumerable<FoodList>;


<div class="container">

    <div class="row">
        <form class="input-group w-50 m-auto my-5" role="search">
            <input type="search" class="form-control" id="floatingInputGroup2" placeholder="Search for Recipe" />
            <button class="input-group-text fs-3" type="submit" title="search"><i class="bi bi-search-heart"></i></button>
        </form>
    </div>

    <div class="row">
        @foreach (var item in Model.Take(10))
        {
            <div class="col-6">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@item.Image" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><em>@item.Title</em></h5>
                                <p class="card-text">Difficulty: @item.Difficulty</p>
                                <a class="btn btn-primary" asp-action="ViewRecipe" asp-route-id="@item.Id"><em>More Info</em></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
